<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
		    <charset>UTF-8</charset>
		    <pattern>%d{yyyy-MM-dd HH:mm:ss} [%level] %msg ~ %caller{1}</pattern>
		</encoder>
    </appender>
    
    <root level="error">
        <appender-ref ref="stdout"/>
    </root>

</configuration>